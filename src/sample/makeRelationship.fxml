<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RelationshipController">
    <children>
        <BorderPane layoutX="68.0" layoutY="61.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox maxHeight="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <MenuBar prefHeight="36.0" prefWidth="600.0">
                            <menus>
                                <Menu mnemonicParsing="false" text="File">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Close" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Edit">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Delete" />
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Help">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="About" />
                                    </items>
                                </Menu>
                            </menus>
                        </MenuBar>
                        <HBox spacing="10.0">
                            <VBox.margin>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                            </VBox.margin>
                        </HBox>
                        <Region prefHeight="0.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </top>
            <right>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="firstFriendField" promptText="First Person" AnchorPane.rightAnchor="5.0" />
                        <TextField fx:id="secondFriendField" layoutY="49.0" promptText="Second Person" AnchorPane.rightAnchor="5.0" />
                        <Button layoutX="14.0" layoutY="292.0" mnemonicParsing="false" onAction="#relationshipScreenButtonPushed" prefWidth="200.0" text="Return to Database" />
                        <TextField fx:id="relationshipField" layoutY="97.0" AnchorPane.rightAnchor="5.0" />
                        <ComboBox fx:id="relationComboBox" layoutX="12.0" layoutY="144.0" onAction="#relationComboChanged" prefWidth="200.0" promptText="Relationship" />
                        <Button layoutX="12.0" layoutY="193.0" mnemonicParsing="false" onAction="#addNewRelationshipProfile" prefWidth="200.0" text="Add New Relationship" />
                        <Button layoutX="14.0" layoutY="241.0" mnemonicParsing="false" onAction="#deleteRelationshipButtonPushed" prefWidth="200.0" text="Remove Relationship" />
                    </children>
                </AnchorPane>
            </right>
            <left>
                <TableView fx:id="tableViewRelationships" prefHeight="350.0" prefWidth="385.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="firstFriendColumn" prefWidth="110.0" text="First Person" />
                        <TableColumn fx:id="secondFriendColumn" prefWidth="110.0" text="Second Person" />
                        <TableColumn fx:id="relationshipColumn" prefWidth="163.0" text="Relationship" />
                    </columns>
                </TableView>
            </left>
        </BorderPane>
    </children>
</AnchorPane>
